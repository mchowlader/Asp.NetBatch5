@model Tuple<CreateGroupModel, EditGroupModel, ListGroupModel>
@section Styles
{
    <link rel="stylesheet" href="/DataImporter/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}
<!-- Navbar -->
<nav class="main-sidebar-custom navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <partial name="Partial/_LeftNavbarPartial" />
    <!-- Left navbar links -->
    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item d-none d-sm-inline-block">
            <div class="text-center">
                <a href="/Customer/Group" class=" btn btn-primary" data-toggle="modal" data-target="#modalLoginAvatar">
                    Create
                    <i class="ion ion-edit"></i>
                </a>
            </div>
        </li>
    </ul>
    <!-- Right navbar links -->
</nav>
<!-- /.navbar -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Available Groups</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Groups</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All Available Groups</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="customer" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Create Date</th>
                                <th style="width:275px">Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Create Date</th>
                                <th style="width:275px">Action</th>
                            </tr>
                        </tfoot>
                    </table>
                    <partial name="Partial/_DeletePopupPartial" />
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Create Modal -->
    <partial name="Partial/_CreateGroupPartial" />

    <!--Edit Modal -->
    <partial name="Partial/_EditGroupPartial" />


    <!--Email Modal -->
    <partial name="Partial/_EmailGroupPartial" />


</section>
<!-- /.content -->
@section Scripts{

    <!-- DataTables  & Plugins -->
    <script src="/DataImporter/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/DataImporter/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/DataImporter/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/DataImporter/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/DataImporter/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/DataImporter/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="/DataImporter/plugins/jszip/jszip.min.js"></script>
    <script src="/DataImporter/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="/DataImporter/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="/DataImporter/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/DataImporter/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/DataImporter/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script>
        $(function () {
            $("#customer").DataTable(
                {
                    "processing": true,
                    "serverSide": true,
                    "ajax": "/Group/GetGroupDataByUser",
                    "columnDefs": [
                        {
                            "orderable": false,
                            "targets": 2,
                            "render": function (data, type, row) {
                                return `<button type ="submit" class ="btn btn-info show-bs-modal-edit btn-sm"
                                                            onclick="window.location.href='/Group/EditGroup/${data}'" value='${data}'>
                                                           <i class = "fas fa-pencil-alt"></i>
                                                        Edit
                                                    </button>
                                                     <button type ="submit" class ="btn btn-danger show-bs-modal-delete btn-sm"
                                                            href = "#" data-id = '${data}' value = '${data}'>
                                                            <i class = "fas fa-trash"></i>
                                                        Delete
                                                    </button>
                                                    <button type ="submit" class ="btn btn-primary show-bs-modal-email btn-sm"
                                                            href = "#" data-id = '${data}' value = '${data}'>
                                                            <i class = "fas fa-envelope "></i>
                                                        E-Mail
                                                    </button>
                                                    <button type ="submit" class ="btn btn-success show-bs-modal-view btn-sm"
                                                            onclick="window.location.href='/Group/ViewGroupData/${data}'" value='${id}'>
                                                            <i class = " fas fa-eye"></i>
                                                        View
                                                    </button>`;
                            }
                        }
                    ]
                }
            );
            $('#customer').on('click', '.show-bs-modal-delete', function (event) {
                var id = $(this).data("id");
                var modal = $("#modal-default");
                modal.find('.modal-body p').text('Are you sure you want to delete this record?')
                $("#deleteId").val(id);
                $("#deleteForm").attr("action", "/Group/DeleteGroup")
                modal.modal('show');
            });
            $("#deleteButton").click(function () {
                $("#deleteForm").submit();
            });

            $('#customer').on('click', '.show-bs-modal-edit', function (event) {
                var id = $(this).data("id");
                var modal = $("#modalEditGroup");
                $("#editId").val(id);
                $("#editForm").attr("action", "/Group/EditGroup")
                modal.modal('show');
            });
            $("#updateButton").click(function () {
                $("#editForm").submit();
            });

            $('#customer').on('click', '.show-bs-modal-email', function (event) {
                var id = $(this).data("id");
                var modal = $("#modalEmailGroup");
                $("#emailId").val(id);
                $("#emailForm").attr("action", "/Group/EmailGroup")
                modal.modal('show');
            });
            $("#emailButton").click(function () {
                $("#emailForm").submit();
            });


            $('#customer').on('click', '.show-bs-modal-view', function (event) {
                var id = $(this).data("id");
                var view = $("#ContactGroup");
                $("#emailId").val(id);
                $("#emailForm").val(id).attr("action", "/Group/Contacs")
                modal.modal('show');
            });
            $("#emailButton").click(function () {
                $("#emailForm").submit();
            });

        });
    </script>
}