@model CreateTicketModel
@section Styles
{

}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Ticket</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- Horizontal Form -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Ticket Form</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" asp-action="Create" asp-controller="Ticket" method="post" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="CustomerId" class="col-sm-2 col-form-label">Customer Id</label>
                                <div class="col-sm-10">
                                    <input asp-for="CustomerId" type="text" class="form-control" id="inputCustomerId" placeholder="customer id">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Destination" class="col-sm-2 col-form-label">Destination</label>
                                <div class="col-sm-10">
                                    <input asp-for="Destination" type="text" class="form-control" id="inputDestination" placeholder="destination">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="TicketFee" class="col-sm-2 col-form-label">Ticket Fee</label>
                                <div class="col-sm-10">
                                    <input asp-for="TicketFee" type="number" class="form-control" id="inputTicketFee" placeholder="amount">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Booking</button>
                            <button asp-action="Data" asp-controller="Ticket" type="submit" class="btn btn-default float-right">Cancel</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts
{

}

