@model ListStudentModel
@section Styles
{
    <!-- DataTables -->
    <link rel="stylesheet" href="/Education/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/Education/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="/Education/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Student</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Data</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Available Student</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="Students" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Roll</th>
                                    <th style="width:135px">Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Roll</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                        <partial name="Partial/_DeletePopupPartial"/>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
@section Scripts
{
    <!-- DataTables  & Plugins -->
    <script src="/Education/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Education/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Education/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/Education/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/Education/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/Education/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="/Education/plugins/jszip/jszip.min.js"></script>
    <script src="/Education/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="/Education/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="/Education/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/Education/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/Education/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
<script>
    $(function () {
        $("#Students").DataTable({

            "processing": true,
            "serverSide": true,
            "ajax": "/Education/Student/GetStudentData",
            "columnDefs": [
                {
                    "orderable": false,
                    "targets": 2,
                    "render": function (data, type, row) {
                        return ` <button type ="submit" class ="btn btn-info btn-sm"
                                    onclick = "window.location.href = '/Education/Student/Edit/${data}'" value = '${data}'>
                                    <i class = "fas fa-pencil-alt"></i>
                                    Edit
                                </button>
                                 <button type ="submit" class ="btn btn-danger show-bs-modal btn-sm"
                                    href = "#" data-id = '${data}' value = '${data}'>
                                    <i class = "fas fa-trash"></i>
                                    Delete
                                </button>`;
                    }
                }
            ]


        });
        $('#Students').on('click', '.show-bs-modal', function (event) {
            var id = $(this).data("id");
            var modal = $("#modal-default");
            modal.find('.modal-body p').text('Are you sure you want to delete this record?')
            $("#deleteId").val(id);
            $("#deleteForm").attr("action", "/Education/Student/Delete")
            modal.modal('show');
        });

        $("#deleteButton").click(function () {
            $("#deleteForm").submit();
        });
    });
    
</script>
}