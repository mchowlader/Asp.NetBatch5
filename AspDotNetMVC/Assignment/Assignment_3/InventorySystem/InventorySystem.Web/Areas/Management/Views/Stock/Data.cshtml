@model ListStockModel
@section Styles
{
    <!-- DataTables -->
    <link rel="stylesheet" href="/Management/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/Management/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="/Management/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Photo</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Data</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Available Photo</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="Photos" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>product Id</th>
                                    <th>Quantity</th>
                                    <th style="width:135px">Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>product Id</th>
                                    <th>Quantity</th>
                                    <th style="width:135px">Action</th>
                                </tr>
                            </tfoot>
                        </table>
                        <partial name="Partial/_DeletePopupPartial" />
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
@section Scripts
{
    <!-- DataTables  & Plugins -->
    <script src="/Management/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Management/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Management/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/Management/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/Management/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/Management/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="/Management/plugins/jszip/jszip.min.js"></script>
    <script src="/Management/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="/Management/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="/Management/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/Management/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/Management/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script>
    $(function () {
        $("#Photos").DataTable(
            {
                "processing": true,
                "serverSide": true,
                "ajax": "/Management/Stock/GetStockData",
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 2,
                        "render": function (data, type, row) {
                            return ` <button type ="submit" class ="btn btn-info btn-sm"
                                        onclick = "window.location.href = '/Management/Stock/Edit/${data}'" value = '${data}'>
                                        <i class = "fas fa-pencil-alt"></i>
                                        Edit
                                    </button>
                                    <button type ="submit" class ="btn btn-danger btn-sm show-bs-modal"
                                        href = "#" data-id = '${data}' value = '${data}'>
                                        <i class = "fas fa-trash"></i>
                                        Delete
                                    </button>`;
                        }
                    }
                ]
            }
        );

        $('#Photos').on('click', '.show-bs-modal', function (event) {
            var id = $(this).data("id");
            var modal = $("#modal-default");
            modal.find('.modal-body p').text('Are you sure you want to delete this record?')
            $("#deleteId").val(id);
            $("#deleteForm").attr("action", "/Management/Stock/Delete")
            modal.modal('show');
        });

        $("#deleteButton").click(function () {
            $("#deleteForm").submit();
        });

    });

    </script>
}
