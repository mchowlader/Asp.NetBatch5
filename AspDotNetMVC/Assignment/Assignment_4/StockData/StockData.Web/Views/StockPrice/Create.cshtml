@model CreateStockPriceModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>StockPrice</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- Horizontal Form -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Create StockPrice</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" asp-action="Create" asp-controller="StockPrice" method="post" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="CompanyId" class="col-sm-2 col-form-label"> Company Id</label>
                                <div class="col-sm-10">
                                    <input asp-for="CompanyId" type="text" class="form-control" id="inputName" placeholder="Company Id name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="LastTradingPrice" class="col-sm-2 col-form-label">Last Trading Price</label>
                                <div class="col-sm-10">
                                    <input asp-for="LastTradingPrice" type="text" class="form-control" id="inputName" placeholder="Last Trading Price">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="High" class="col-sm-2 col-form-label">High</label>
                                <div class="col-sm-10">
                                    <input asp-for="High" type="text" class="form-control" id="inputName" placeholder="High">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Low" class="col-sm-2 col-form-label">Low</label>
                                <div class="col-sm-10">
                                    <input asp-for="Low" type="text" class="form-control" id="inputName" placeholder="Low">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ClosePrice" class="col-sm-2 col-form-label">Close Price</label>
                                <div class="col-sm-10">
                                    <input asp-for="ClosePrice" type="text" class="form-control" id="inputName" placeholder="Close Price">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="YesterdayClosePrice" class="col-sm-2 col-form-label">Yesterday Close Price</label>
                                <div class="col-sm-10">
                                    <input asp-for="YesterdayClosePrice" type="text" class="form-control" id="inputName" placeholder="Yesterday Close Price">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Change" class="col-sm-2 col-form-label">Change</label>
                                <div class="col-sm-10">
                                    <input asp-for="Change" type="text" class="form-control" id="inputName" placeholder="Change">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Trade" class="col-sm-2 col-form-label">Trade</label>
                                <div class="col-sm-10">
                                    <input asp-for="Trade" type="text" class="form-control" id="inputName" placeholder="Trade">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Value" class="col-sm-2 col-form-label">Value</label>
                                <div class="col-sm-10">
                                    <input asp-for="Value" type="text" class="form-control" id="inputName" placeholder="Value">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Volume" class="col-sm-2 col-form-label">Volume</label>
                                <div class="col-sm-10">
                                    <input asp-for="Volume" type="text" class="form-control" id="inputName" placeholder="Volume">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Create</button>
                            <button asp-action="Index" asp-controller="StockPrice" type="submit" class="btn btn-default float-right">Cancel</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
