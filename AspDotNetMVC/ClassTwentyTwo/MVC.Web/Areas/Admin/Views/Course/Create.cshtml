@model CreateCourseModel
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Enrollment Course</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Course</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                 
                    <!-- Horizontal Form -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Create Course</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form class="form-horizontal" asp-controller="Course" asp-action="Create" method="post" asp-antiforgery="true">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="card-body">
                                <div class="form-group row">
                                    <label asp-for="Titel" class="col-sm-2 col-form-label">Course Titel</label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="Titel" class="form-control" id="coursename" placeholder="course name">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Fees" class="col-sm-2 col-form-label">Fees</label>
                                    <div class="col-sm-10">
                                        <input type="number" asp-for="Fees" class="form-control" id="fees" placeholder="amount">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="StartDate" class="col-sm-2 col-form-label">Start Date</label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="StartDate" class="form-control" id="datetime" placeholder="date">
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Create</button>
                                <a asp-action="Create" asp-controller="Course" class="btn btn-default float-right">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->