@model CreateCourseModel
@section Styles
{
    <link rel="stylesheet" href="/Admin/plugins/daterangepicker/daterangepicker.css">
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create Course</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create Course</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Course From</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-action="CreateCourse" asp-controller="Course" 
                          asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Title" class="form-control" id="inputtitle" placeholder="course name">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Fees" class="col-sm-2 col-form-label">Fees</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="Fees" class="form-control" id="inputfees" placeholder="amount">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Startdate" class="col-sm-2 col-form-label">Start Date</label>
                                <div class="col-sm-10">
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <input type="datetime" asp-for="Startdate" class="form-control datetimepicker-input" 
                                               data-target="#reservationdate" />
                                        <div class="input-group-append " data-target="#reservationdate" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Create</button>
                            <a asp-action="Index" asp-controller="Course" type="submit" class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
                <!-- /.card -->

            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <script src="/Admin/plugins/daterangepicker/daterangepicker.js"></script>

    <script>
        $(function ()
        {
            //Date picker
            $('#reservationdate').datetimepicker({format: 'L'});
        });
    </script>
}




