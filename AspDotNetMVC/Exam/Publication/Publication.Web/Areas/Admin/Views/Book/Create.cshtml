
@model CreateBookModel
@section Styles
{
    <!-- daterange picker -->
    <link rel="stylesheet" href="/Admin/plugins/daterangepicker/daterangepicker.css">
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Book</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- Horizontal Form -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Create Book</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" asp-action="Create" asp-controller="Book" method="post" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="Title" class="col-sm-2 col-form-label">Book Name</label>
                                <div class="col-sm-10">
                                    <input asp-for="Title" type="text" class="form-control" id="inputName" placeholder="book name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Barcode" class="col-sm-2 col-form-label">Barcode</label>
                                <div class="col-sm-10">
                                    <input asp-for="Barcode" type="text" class="form-control" id="inputRoll" placeholder="Barcode">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                                <div class="col-sm-10">
                                    <input asp-for="Price" type="number" class="form-control" id="inputRoll" placeholder="Amount">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Create</button>
                            <button asp-action="Index" asp-controller="Book" type="submit" class="btn btn-default float-right">Cancel</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts
{
    <!-- date-range-picker -->
    <script src="/Admin/plugins/daterangepicker/daterangepicker.js"></script>

  
}




