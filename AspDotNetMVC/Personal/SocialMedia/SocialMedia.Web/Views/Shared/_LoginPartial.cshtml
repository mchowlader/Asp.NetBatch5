@using Microsoft.AspNetCore.Identity
@using SocialMedia.Membership.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Accounts" asp-action="Index"  title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Accounts" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller= "Accounts" asp-action= "Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller= "Accounts" asp-action= "Login">Login</a>
    </li>
}
</ul>
